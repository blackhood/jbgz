                                          <div class="mic-info">
                                              <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-play"></span>订阅(即将到来)</a>
                                          </div>
                                      </div>
                                  </div>

                                  <div class="row m-t-md">
                                      <div class="col-md-4">
                                          <h5><strong><%=video.views %> views</strong>观看</h5>
                                      </div>
                                      <div class="col-md-8">
                                          <h5><strong>28</strong> 评价</h5>
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <div class="ibox float-e-margins">
                              <div class="ibox-content profile-content">
                                  <h4><i class="fa fa-clock-o"></i><%=video.create_date %> 上传 </h4>
                                  <p><%=video.description %></p>
                              </div>
                          </div>
                      </div>
                  </div>

                  <!-- submit comment -->
                  <div class="row">
                      <div class="col-lg-12">
                          <div class="ibox float-e-margins" id="video-comment">
                              <div id="comment-area" class="ibox-title">
                                  <h5>随便写两句评论吧</h5>
                              </div>

                              <form action="#" method="post">
                                  <textarea name="content" class="form-control input-lg" rows = "10"></textarea>
                                  <button class="btn btn-block btn-primary btn-success" name="submit_comment">
                                      发表评论
                                  </button>
                              </form>

                          </div>
                      </div>
                  </div>

                  <!-- view comments  -->
                  <div class="row">
                      <div class="ibox float-e-margins" id="comment-all">
                          <div class="ibox-title">
                              <h5>所有评论</h5>
                          </div>

                      </div>

                      <div class="panel-body">
