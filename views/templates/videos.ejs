<div class="row center-block">
    <div class="animated fadeInRight center-block">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h2 class="category-title"><span class="glyphicon"></span>
                            <%=video_type%>
                            <% if(video_type === '最热视频'){ %>
                                <span class="view-more"><a href="/video/hot_video">观看更多</a></span>
                            <% } else if(video_type === '最新视频'){ %>
                                <span class="view-more"><a href="/video/recent_video">观看更多</a></span>
                            <% } %>
                        </h2>
                    </div>
                </div>

                <% for(var i=0; i < videos.length; i++) {%>

                    <div class="file-box">
                        <div class="file">
                            <a href="/video?video_id=<%=videos[i]._id%>">
                                <span class="corner"></span>

                                <div class="image">
                                    <img alt="image" class="img-responsive" src="<%=videos[i].thumbnail%>">
                                </div>
                                <div class="file-name" style="text-align: center"> <%=videos[i].title%>
                                    <br/>
                                    <small>作者 <a href="#"><%=videos[i].user_name%></a>观看 <%=videos[i].views%></small>
                                    <br/>
                                    <small> 时长:<%=videos[i].duration%></small>
                                    <br/>
                                    <small> 添加:<%=videos[i].upload_date.toISOString().split('T')[0]%></small>
                                </div>
                            </a>
                        </div>
                    </div>

                <% } %>
                
            </div>
        </div>
    </div>
</div>